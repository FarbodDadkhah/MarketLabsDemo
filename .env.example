# DocuMind environment configuration
# Copy this file: cp .env.example .env

# PostgreSQL connection (matches docker-compose defaults)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/documind

# Redis connection (matches docker-compose defaults)
REDIS_URL=redis://localhost:6379/0

# AI provider settings
# AI_API_KEY is optional for local dev â€” the /health endpoint works without it
AI_API_KEY=
AI_PROVIDER=anthropic
AI_MODEL=claude-sonnet-4-5-20250929

# Upload limit
MAX_FILE_SIZE_MB=50
